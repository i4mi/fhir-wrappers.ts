{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2015",
    "lib": [ "es2015", "dom" ],
    "outDir": "js-on-fhir",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react"
  },
  "files": [
    "./src/js-on-fhir.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": ["node_modules", "dist", "src", "webpack.config.js", "tsconfig.json"]
}