{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "outDir": "js-on-fhir",
      "allowSyntheticDefaultImports": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "declaration": true,
      "jsx": "react"
    },
    "files": [
      "./src/index.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": ["node_modules", "dist", "src", "webpack.config.js", "tsconfig.json"]
  }
